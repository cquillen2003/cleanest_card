<div class="container">
	<h4>
		<span style="text-decoration: underline">Projects</span>
		for
		<span style="text-decoration: underline">this week</span>
		in category
		<span style="text-decoration: underline">Kinnser</span>
		
		<a data-toggle="modal" href="#myModal" class="btn btn-primary">Launch demo modal</a>
		
	</h4>
</div>

<div class="container cq-white">
		<table class="table">
			<tr class="active">
				<th style="width:31%">Project</th>
				<th style="width:42%">Description</th>
				<th style="width:10%">Due</th>
				<th style="width:8%">Priority</th>
				<th style="width:3%"></th>
				<th style="width:3%"></th>
				<th style="width:3%"></th>
			</tr>
			<% @projects.each do |project| %>
			<tr id="proj_id-<%= project.id %>">
				<td><%= project.name %></td>
				<td><%= project.description %></td>
				<td><%= project.due_date %></td>
				<td><%= project.priority %></td>
				<td><a href="#">Edit</a></td>
				<td><%= link_to 'Del', project, method: :delete, :remote => true, data: { confirm: 'Are you sure?' } %></a></td>
				<td><%= link_to "+", new_project_path(:proj_id => project.id), :remote => true %></td>
			</tr>			
			<% end %>						
		</table>
</div>



  
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Modal title</h4>
      </div>
      <div class="modal-body">
      	
<%= nested_form_for @project, :remote => true do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, :class => "form-control", :rows => 4 %>
  </div>
  
  <div class="form-group">
    <%= f.label :status %>
    <%= f.text_field :status, :class => "form-control" %>
  </div>
  
  	<div class="row">
			<div class="col-lg-9">Task</div>
			<div class="col-lg-3">Due Date</div>
		</div>

		<%= f.fields_for :tasks do |ff| %>
  	<div class="row">
			<div class="col-lg-9"><%= ff.text_field :name, :class => "form-control" %></div>
			<div class="col-lg-3"><%= ff.text_field :status, :class => "form-control" %></div>
		</div>		
		<% end %>					
				
			
			<p><%= f.link_to_add "Add a task", :tasks %></p>  
  
        
 
    <%= f.submit %>
<% end %>      	



      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->