<%= render "shared/navbar" %>

<div class="container-narrow">
	<div class="row">
		<div class="col-md-24">
			<div id="project-name" class="project-section">
				<h3><%= @project.name %></h3>
				<p><%= @project.description %></p>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-md-17">
			<div id="project-body">
				<div id="project-notes" class="project-section">
					<h5>Project Notes</h5>
					<p><%= @project.notes %></p>
				</div>
				<div id="project-tasks" class="project-section">
					<h5>Project Tasks</h5>
					<table class="table">
						<thead>
							<tr>
								<th>Task</th>
								<th>Assigned To</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							<% @tasks.each do |task| %>
							<tr class="project-task-row">
								<td><%= task.name %></td>
								<td></td>
								<td></td>
							</tr>
							<% end %>
						</tbody>
					</table>
				</div>
			</div>	
		</div>
		<div class="col-md-7">
			<div id="project-collaborators" class="project-section">
				<h5>Project Collaborators</h5>
				
				<ul class="list-unstyled">
				<% @project.users.each do |user| %>
					<li><%= user.email %></li>
				<% end %>
				</ul>

			</div>
		</div>
	</div>

	
</div>