<div class="container">
	<h4>
		<span style="text-decoration: underline">Projects</span>
		for
		<span style="text-decoration: underline">this week</span>
		in category
		<span style="text-decoration: underline">Kinnser</span>
		<a data-toggle="modal" href="#myModal" class="btn btn-primary">Launch demo modal</a>
	</h4>
</div>

<div class="container">
	<div class="row">
		<div class="col-lg-4">
			<div class="panel panel-default column">
			  <!-- Default panel contents -->
			  <div class="panel-heading">Planned</div>
			
			  <!-- List group -->
			  <ul class="list-group">
					<% @projects.each do |project| %>				
					  <a href="#" class="list-group-item">
					  	<span class="badge">14</span>
					    <h4 class="list-group-item-heading"><%= project.name %></h4>
					    <p class="list-group-item-text">...</p>
					  </a>				
					<% end %>    
			  </ul>	
			</div>
		</div>
		<div class="col-lg-4">
			<div class="panel panel-default column">
			  <!-- Default panel contents -->
			  <div class="panel-heading">Started</div>
			
			  <!-- List group -->
			  <ul class="list-group">
					<% @projects.each do |project| %>				
					  <a href="#" class="list-group-item">
					  	<span class="badge">14</span>
					    <h4 class="list-group-item-heading"><%= project.name %></h4>
					    <p class="list-group-item-text">...</p>
					  </a>				
					<% end %>
			  </ul>
			</div>
		</div>
		<div class="col-lg-4">
			<div class="panel panel-default column">
			  <!-- Default panel contents -->
			  <div class="panel-heading">Done</div>
			
			  <!-- List group -->
		
			</div>
		</div>
		
	</div>
</div>


<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Modal title</h4>
      </div>
      <div class="modal-body">
      	
<%= nested_form_for @project, :remote => true do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area :notes, :class => "form-control", :rows => 4 %>
  </div>
  
  <div class="form-group">
    <%= f.label :status %>
    <%= f.text_field :status, :class => "form-control" %>
  </div>
  
  	<div class="row">
			<div class="col-lg-9">Task</div>
			<div class="col-lg-3">Due Date</div>
		</div>

		<%= f.fields_for :tasks do |ff| %>
  	<div class="row">
			<div class="col-lg-9"><%= ff.text_field :name, :class => "form-control" %></div>
			<div class="col-lg-3"><%= ff.text_field :status, :class => "form-control" %></div>
		</div>		
		<% end %>					
				
			
			<p><%= f.link_to_add "Add a task", :tasks %></p>  
  
        
 
    <%= f.submit %>
<% end %>      	



      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->	