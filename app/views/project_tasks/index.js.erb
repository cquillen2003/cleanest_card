$(".marked .show-tasks-link").addClass("hidden");
$(".marked .hide-tasks").removeClass("hidden");
	
<% @tasks.each do |task| %>
	$(".marked").after("<%= j(render :partial => "project_task_card", :locals => { :project => @project, :task => task }) %>");
<% end %>

$(".marked").removeClass("sortable");

//Destroy and re-enable to prevent expanded project from being dragged away from its tasks
$(".plannable").sortable("destroy");

$(".plannable").sortable( 
	{ connectWith: ".plannable" },
	{ items: ".project, .task" }
);