<li class="list-group-item card project sortable" id="proj-<%= project.id %>">
	<i class="fa fa-folder-o pull-right"></i>
	<h5 class="list-group-item-heading"><%= link_to project.name, project_path(project.id) %></h5>
	<small class="card-controls invisible">
		<i class="fa fa-plus-square-o"></i>&nbsp;
		<%= link_to "Tasks", project_tasks_url(project), :remote => true , :class => "show-tasks" %>
		<a href="#" class="hide-tasks hidden">Hide Tasks</a>
		&nbsp;&nbsp;&nbsp;
	</small>
	<small class="card-controls invisible">
		<i class="fa fa-chevron-down"></i>&nbsp;
		<%= link_to "Insert Project", new_project_path(:proj_id => project.id, :cat_id => @category.id), :remote => true %>&nbsp;&nbsp;&nbsp;
	</small>
	<small class="card-controls invisible">
		<i class="fa fa-chevron-down"></i>&nbsp;
		<%= link_to "Insert Task", new_task_path(:proj_id => project.id, :cat_id => @category.id), :remote => true %>&nbsp;&nbsp;&nbsp;
	</small>	
	<small class="card-controls invisible">
		<i class="fa fa-times"></i>&nbsp;
		<%= link_to 'Delete', project, method: :delete, :remote => true, data: { confirm: 'Are you sure?' } %>
	</small>
	
	<%= form_for project, :class => "hide", :remote => true do |f| %>
		<%= f.hidden_field :status, :value => "", :class => "status_field" %>
		<%= f.submit :class => "hide jquery_sub" %>
	<% end %>	
</li>