<div data-role="header">
	<a href="/projects?status=started" data-icon="back">Projects</a>
	<h1>Project</h1>	
</div>



<div data-role="content">
	
	<h2><%= @project.title %></h2>
	
	<div data-role="controlgroup" data-type="horizontal">
    <a href="<%= "/projects/#{@project.id}/tasks?status=planned" %>" data-role="button">Planned</a>
    <a href="<%= "/projects/#{@project.id}/tasks?status=started" %>" data-role="button">Started</a>
    <a href="<%= "/projects/#{@project.id}/tasks?status=done" %>" data-role="button">Done</a>
	</div><!-- /navbar -->
		
	<br />
	
	<%= form_tag mass_update_project_tasks_path(@project), :method => :put, :data => { :ajax => "false" } do %>
	<!-- 
		ajax set to false on form submission to fix problem with URL after redirect 
		http://stackoverflow.com/questions/9202233/rails3-jquery-mobile-and-remote-true-ajax-calls-processing-as-html
	-->
		<ul data-role="listview">

			<% @tasks.each_with_index do |task, index| %>
		    <li>
		    	<%= check_box_tag "task_ids[]", task.id, false, :data => { "role" => "none" } %>
    			<label for="checkbox-corey"><%= task.title %></label>
		    </li>	
	    <% end %>
    
		</ul>
	<br />
	<%= submit_tag "edit collection" %>
	<% end %>
	
</div>

<div data-role="footer" data-position="fixed" id="footer-controls" style="display:none">
		<input type="button" value="Input" data-mini="true" data-inline="true" data-icon="plus">
		<input type="button" value="Input" data-mini="true" data-inline="true" data-icon="arrow-l">
		<input type="button" value="Input" data-mini="true" data-inline="true" data-icon="arrow-r">
</div>


