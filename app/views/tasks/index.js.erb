$("#proj-<%= @project.id %> .show-tasks").addClass("hidden");
$("#proj-<%= @project.id %> .hide-tasks").removeClass("hidden");
	
<% @tasks.each do |task| %>
	$("#proj-<%= @project.id %>").after("<%= j(render :partial => "boards/project_task_card", :locals => { :project => @project, :task => task }) %>");
<% end %>

$("#proj-<%= @project.id %>").removeClass("sortable");

//Destroy and re-enable to prevent expanded project from being dragged away from its tasks
$(".column").sortable("destroy");

$(".column").sortable( 
	{ connectWith: ".column" },
	{ items: ".sortable" }
);