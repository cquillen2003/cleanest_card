<li class="list-group-item card task">
	<span class="pull-right">Task</span>
	<h5 class="list-group-item-heading"><%= link_to task.name, task_path(task.id) %></h5>

	<small class="card-controls invisible">
		<i class="fa fa-chevron-down"></i>&nbsp;
		<%= link_to "Insert Project", new_project_path(:cat_id => cat_id), :remote => true %>&nbsp;&nbsp;&nbsp;
	</small>
	<small class="card-controls invisible">
		<i class="fa fa-chevron-down"></i>&nbsp;
		<%= link_to "Insert Task", new_task_path(:cat_id => cat_id), :remote => true %>&nbsp;&nbsp;&nbsp;
	</small>	
	<small class="card-controls invisible">
		<i class="fa fa-times"></i>&nbsp;
		<%= link_to 'Delete', task, method: :delete, :remote => true, data: { confirm: 'Are you sure?' }, :class => "delete-task-link" %>
	</small>
	
	<%= form_for task, :class => "hide", :remote => true do |f| %>
		<%= f.hidden_field :status, :value => "", :class => "status_field" %>
		<%= f.submit :class => "hide jquery_sub" %>
	<% end %>	
</li>